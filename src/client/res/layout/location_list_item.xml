<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="wrap_content" 
   android:gravity="left|center"
   android:layout_width="wrap_content" 
   android:paddingBottom="5px"
   android:paddingTop="5px" 
   android:paddingLeft="5px"
   android:id="@+id/eachLocation"
   >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="6dip"
        android:src="@drawable/pin" />

    <LinearLayout
       android:orientation="vertical"
       android:layout_width="0dip"
       android:layout_weight="1"
       android:layout_height="fill_parent">
      
   <TextView android:id="@+id/latitudeTVLocationList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"/>
   <TextView android:id="@+id/longitudeTVLocationList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"/>   
	   <LinearLayout
	       android:orientation="horizontal"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content">
		  <TextView android:id="@+id/addressTVLabelLocationList" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="10px" 
		      android:textColor="#0099CC"
		      android:text="Address"
		      />
		  <TextView android:id="@+id/addressTVLocationList" 
		      android:layout_width="wrap_content" 
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="5px" 
		      android:textColor="#0099CC"/>
	  </LinearLayout>
    </LinearLayout>
</LinearLayout>